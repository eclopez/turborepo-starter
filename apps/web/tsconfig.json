{
  "extends": "@starter/ts/react.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "module": "esnext",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", ".next/dev/types/**/*.ts", "**/*.mts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "vitest.config.ts"]
}
